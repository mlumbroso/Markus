      attributes = %w(display fontsize fontweight fontstyle fontfamily color background mathvariant mathsize mathcolor mathbackground) %>
	
    <% if (defined? annots) %>
      <% annots.each do |annot| %>
          add_annotation_text(<%=annot.annotation_text.id%>,
          '<%=sanitize(annot.annotation_text.content.to_s, :tags => tags, :attributes => attributes) %>');
      <% end %>
    <% end %>
